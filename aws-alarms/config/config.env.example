# AWS Configuration
AWS_REGION="us-east-1"
AWS_PROFILE="default"

# Project Configuration
ENVIRONMENT="dev"
PROJECT_NAME="my-project"
TEAM="cloudops"

# SNS Topics for Notifications
SNS_TOPIC_CRITICAL="arn:aws:sns:us-east-1:123456789012:critical-alerts"
SNS_TOPIC_WARNING="arn:aws:sns:us-east-1:123456789012:warning-alerts"
SNS_TOPIC_INFO="arn:aws:sns:us-east-1:123456789012:info-alerts"

# Common Tags
COMMON_TAGS="Key=Environment,Value=${ENVIRONMENT} Key=Project,Value=${PROJECT_NAME} Key=Team,Value=${TEAM} Key=ManagedBy,Value=aws-cli-alarms"

# Global Alarm Settings
ALARM_PREFIX="${PROJECT_NAME}-${ENVIRONMENT}"
EVALUATION_PERIODS=2
DATAPOINTS_TO_ALARM=2
TREAT_MISSING_DATA="notBreaching"

# Service Controls (20 AWS Services)
ENABLE_EC2_ALARMS=true
ENABLE_RDS_ALARMS=true
ENABLE_LAMBDA_ALARMS=true
ENABLE_S3_ALARMS=true
ENABLE_DYNAMODB_ALARMS=true
ENABLE_CLOUDFRONT_ALARMS=true
ENABLE_ALB_ALARMS=true
ENABLE_API_GATEWAY_ALARMS=true
ENABLE_ELASTICACHE_ALARMS=true
ENABLE_ECS_ALARMS=true
ENABLE_AURORA_ALARMS=true
ENABLE_AURORA_SERVERLESS_ALARMS=false
ENABLE_EBS_ALARMS=true
ENABLE_EFS_ALARMS=false
ENABLE_EKS_ALARMS=true
ENABLE_FARGATE_ALARMS=false
ENABLE_FSX_ALARMS=false
ENABLE_GLUE_ALARMS=false
ENABLE_REDSHIFT_ALARMS=false
ENABLE_WAF_ALARMS=true

# EC2 Thresholds
EC2_CPU_CRITICAL_THRESHOLD=90
EC2_CPU_WARNING_THRESHOLD=80
EC2_NETWORK_IN_WARNING_THRESHOLD=1000000000
EC2_NETWORK_OUT_WARNING_THRESHOLD=1000000000
EC2_DISK_READ_OPS_WARNING_THRESHOLD=1000
EC2_DISK_WRITE_OPS_WARNING_THRESHOLD=1000

# RDS Thresholds
RDS_CPU_CRITICAL_THRESHOLD=90
RDS_CPU_WARNING_THRESHOLD=80
RDS_CONNECTIONS_CRITICAL_THRESHOLD=80
RDS_FREEABLE_MEMORY_CRITICAL_THRESHOLD=104857600

# Lambda Thresholds
LAMBDA_ERROR_RATE_CRITICAL_THRESHOLD=5
LAMBDA_ERROR_RATE_WARNING_THRESHOLD=2
LAMBDA_DURATION_CRITICAL_THRESHOLD=240000
LAMBDA_INVOCATIONS_WARNING_THRESHOLD=1000

# S3 Thresholds
S3_4XX_ERROR_RATE_CRITICAL_THRESHOLD=5
S3_5XX_ERROR_RATE_CRITICAL_THRESHOLD=1
S3_ALL_REQUESTS_WARNING_THRESHOLD=10000
S3_GET_REQUESTS_WARNING_THRESHOLD=5000
S3_PUT_REQUESTS_WARNING_THRESHOLD=2000
S3_DELETE_REQUESTS_WARNING_THRESHOLD=500

# DynamoDB Thresholds
DYNAMODB_THROTTLED_REQUESTS_THRESHOLD=0
DYNAMODB_SYSTEM_ERRORS_THRESHOLD=0
DYNAMODB_READ_CAPACITY_CRITICAL_THRESHOLD=80
DYNAMODB_WRITE_CAPACITY_CRITICAL_THRESHOLD=80
DYNAMODB_ITEM_COUNT_WARNING_THRESHOLD=1000000

# CloudFront Thresholds
CLOUDFRONT_4XX_ERROR_RATE_CRITICAL_THRESHOLD=5
CLOUDFRONT_5XX_ERROR_RATE_CRITICAL_THRESHOLD=1
CLOUDFRONT_REQUESTS_WARNING_THRESHOLD=100000

# ALB Thresholds
ALB_5XX_ERROR_COUNT_CRITICAL_THRESHOLD=10
ALB_RESPONSE_TIME_CRITICAL_THRESHOLD=5000
ALB_REQUEST_COUNT_WARNING_THRESHOLD=10000

# API Gateway Thresholds
API_GATEWAY_4XX_ERROR_RATE_CRITICAL_THRESHOLD=5
API_GATEWAY_5XX_ERROR_RATE_CRITICAL_THRESHOLD=1

# ElastiCache Thresholds
ELASTICACHE_CPU_CRITICAL_THRESHOLD=90
ELASTICACHE_MEMORY_CRITICAL_THRESHOLD=90

# ECS Thresholds
ECS_CPU_CRITICAL_THRESHOLD=90
ECS_MEMORY_CRITICAL_THRESHOLD=90