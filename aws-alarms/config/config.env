TEAM="cloudops"

# SNS Topics for Notifications (will be created)
SNS_TOPIC_CRITICAL="arn:aws:sns:us-east-1:840021737375:observability-demo-critical-alerts"
SNS_TOPIC_WARNING="arn:aws:sns:us-east-1:840021737375:observability-demo-warning-alerts"
